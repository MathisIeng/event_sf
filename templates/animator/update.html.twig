{% extends 'base.html.twig' %}

{% block title %}Édition de l'animateur - {{ animator.firstname }}{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3>Édition de l'animateur : {{ animator.firstname }}</h3>
        <a href="{{ path('animator') }}" class="btn btn-secondary">Retour à la liste des animateurs</a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <form method="post" action="{{ path('animator_update', { id: animator.id }) }}">
                {{ form_start(formView, {'attr': {'class': 'needs-validation'}}) }}

                {{ form_widget(formView, {'attr': {'class': 'form-control'}}) }}

                {{ form_end(formView) }}
            </form>
        </div>
    </div>
{% endblock %}