{% extends 'base.html.twig' %}

{% block title %}Hello EstablishmentController!{% endblock %}

{% block body %}

    <section class="container my-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <a href="{{ path('room_create') }}" class="btn btn-primary">Cr√©er une nouvelle salle</a>
        </div>

        <div class="row">
            {% for room in rooms %}
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card shadow-sm h-100">
                        <div class="card-body">
                            <h2 class="card-title">{{ room.name }}</h2>
                            <p class="card-title">{{ room.capacity }}</p>
                            <p class="btn btn-warning">{{ room.establishment.name }}</p>
                            <div>
                                {% for image in room.images %}
                                    <img class="rounded mb-3" src="{{ asset('assets/images/' ~ image.path) }}" width="200" alt="Image of {{ room.name }}">
                                {% endfor %}
                            </div>
                            <a class="btn btn-success" href="{{ path('room_update', { id: room.id }) }}">Update</a>
                            <a class="btn btn-danger" href="{{ path('room_delete', { id: room.id }) }}">Delete</a>
                        </div>
                    </div>
                </div>

            {% endfor %}
        </div>
    </section>

{% endblock %}
