{% extends 'base.html.twig' %}

{% block title %}Édition de la salle - {{ room.name }}{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3>Édition de la salle : {{ room.name }}</h3>
        <a href="{{ path('room') }}" class="btn btn-secondary">Retour à la liste des salles</a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <form method="post" action="{{ path('room_update', { id: room.id }) }}">
                {{ form_start(formView, {'attr': {'class': 'needs-validation'}}) }}

                {{ form_widget(formView, {'attr': {'class': 'form-control'}}) }}

                {{ form_end(formView) }}
            </form>
        </div>
    </div>
{% endblock %}