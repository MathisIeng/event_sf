{% extends 'base.html.twig' %}

{% block title %}Hello EstablishmentController!{% endblock %}

{% block body %}

    <section class="container my-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <a href="{{ path('category_create') }}" class="btn btn-primary">Créer une nouvelle catégorie</a>
        </div>

        <div class="row">
            {% for category in categories %}
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card shadow-sm h-100">
                        <div class="card-body">
                            <h2 class="card-title">{{ category.name }}</h2>
                            <p class="card-title">{{ category.description }}</p>
                            <a class="btn btn-success" href="{{ path('category_update', {id: category.id}) }}">Update</a>
                            <a class="btn btn-danger" href="{{ path('category_delete', {id: category.id}) }}">Delete</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </section>

{% endblock %}
