{% extends 'base.html.twig' %}

{% block title %}Édition de l'event - {{ event.title }}{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3>Édition de l'event : {{ event.title }}</h3>
        <a href="{{ path('event') }}" class="btn btn-secondary">Retour à la liste des évènements</a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <form method="post" action="{{ path('event_update', { id: event.id }) }}">
                {{ form_start(formView, {'attr': {'class': 'needs-validation'}}) }}

                {{ form_widget(formView, {'attr': {'class': 'form-control'}}) }}

                {{ form_end(formView) }}
            </form>
        </div>
    </div>
{% endblock %}