{% extends 'base.html.twig' %}

{% block title %}Hello EventController!{% endblock %}

{% block body %}

    <section class="container my-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <a href="{{ path('event_create') }}" class="btn btn-primary">Cr√©er un nouvel event</a>
        </div>

        <div class="row">
            {% for event in events %}
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card shadow-sm h-100">
                        <div class="card-body">
                            <h2 class="card-title">{{ event.title }}</h2>
                            <p class="card-title">{{ event.description }}</p>
                            <p class="card-title">{{ event.startTime|date('d/m/Y') }}</p>
                            <p class="card-title">{{ event.EndTime|date('d/m/Y') }}</p>
                            <p class="btn btn-warning">{{ event.room.name }}</p>
                            <p class="btn btn-secondary">{{ event.animator.firstname }}</p>
                            <p class="btn btn-info">{{ event.category.name }}</p>
                            <a class="btn btn-success" href="{{ path('event_update', { id: event.id }) }}">Update</a>
                            <a class="btn btn-danger" href="{{ path('event_delete', { id: event.id }) }}">Delete</a>
                        </div>
                    </div>
                </div>

            {% endfor %}
        </div>
    </section>

{% endblock %}
